{
    "manifest_version": 3,
    "name": "ConvertEx",
    "version": "1.0",
    "author": "polyychi",
    "description": "Adds a pop-up that allows easy conversion of over 200 currencies and cypto-currencies. Pop-up saves data when closed.",

    "homepage_url": "https://github.com/polyychi/convertex",
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        },
        "default_popup": "popup/index.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+A"
            },
            "description": "Toggles the pop-up"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}